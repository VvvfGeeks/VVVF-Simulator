<UserControl x:Class="VvvfSimulator.GUI.Create.Waveform.Basic.PulseSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VvvfSimulator.GUI.Create.Waveform.Basic"
             mc:Ignorable="d" 
             d:DesignWidth="661">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GUI/Resource/Dictionary/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <Style TargetType="Label" x:Key="UnitLabel">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="{DynamicResource Generic.Font}"/>
                <Setter Property="Foreground" Value="{DynamicResource BackgroundTextBrush}"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{DynamicResource ControlBorder}">
        <StackPanel>
            <Border Background="{DynamicResource TitleBarBrush}" CornerRadius="25,25,0,0" Height="50">
                <Label Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.Title}" Style="{DynamicResource TitleBarText}"/>
            </Border>

            <Border Background="{DynamicResource BackgroundBrush}" Height="50" Name="PulseTypeSection">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="11*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{DynamicResource SubTitleBarBrush}">
                        <Label Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.Type}" Style="{DynamicResource SubTitleBarText}"/>
                    </Border>
                    <Grid Grid.Column="1">
                        <ComboBox SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource SlimComboBoxStyle}" x:Name="PulseTypeSelector" SelectionChanged="SelectorSectionChanged" Grid.ColumnSpan="1" Tag="PulseType" />
                    </Grid>
                </Grid>
            </Border>
            <Border Background="{DynamicResource BackgroundBrush}" Height="50" Name="PulseCountSection">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="11*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{DynamicResource SubTitleBarBrush}">
                        <Label Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.PulseCount}" Style="{DynamicResource SubTitleBarText}"/>
                    </Border>
                    <Grid Grid.Column="1">
                        <ComboBox Visibility="Visible" SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource SlimComboBoxStyle}" x:Name="PulseCountSelector" SelectionChanged="SelectorSectionChanged" Grid.ColumnSpan="1" Tag="PulseCount" />
                        <TextBox Visibility="Collapsed" x:Name="PulseCountBox" Style="{DynamicResource SlimTextBox}" TextChanged="TextboxUpdate" Tag="PulseCount"/>
                    </Grid>
                </Grid>
            </Border>
            <Border Background="{DynamicResource BackgroundBrush}" Height="50" CornerRadius="0,0,0,0" Name="AltModeSection">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="11*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{DynamicResource SubTitleBarBrush}" CornerRadius="0,0,0,0">
                        <Label Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.AltMode}" Style="{DynamicResource SubTitleBarText}"/>
                    </Border>
                    <Grid Grid.Column="1">
                        <ComboBox Visibility="Visible" SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource SlimComboBoxStyle}" x:Name="AltModeSelector" SelectionChanged="SelectorSectionChanged" Grid.ColumnSpan="1" Tag="AltMode" />
                    </Grid>
                </Grid>
            </Border>
            <Border Background="{DynamicResource BackgroundBrush}" Height="50" CornerRadius="0,0,0,0" Name="BaseWaveSection">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="11*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{DynamicResource SubTitleBarBrush}" CornerRadius="0,0,0,0">
                        <Label Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.BaseWave}" Style="{DynamicResource SubTitleBarText}"/>
                    </Border>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource SlimComboBoxStyle}" x:Name="BaseWaveSelector" SelectionChanged="SelectorSectionChanged" Tag="BaseWave" Grid.Row="1" Grid.Column="0" />
                        <Button Style="{DynamicResource SlimButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="DiscreteSettingButton" Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.BaseWave.DiscreteSetting}" Click="ButtonClick" Tag="DiscreteSetting" Grid.Column="1" Grid.Row="1"/>
                        <Button Style="{DynamicResource SlimButton}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="HarmonicSettingButton" Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.BaseWave.HarmonicSetting}" Click="ButtonClick" Tag="HarmonicSetting" Grid.Column="2" Grid.Row="1"/>
                    </Grid>
                </Grid>
            </Border>
            <Border Background="{DynamicResource BackgroundBrush}" Height="50" CornerRadius="0,0,25,25" Name="CarrierWaveSection">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="11*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="{DynamicResource SubTitleBarBrush}" CornerRadius="0,0,0,25">
                        <Label Content="{DynamicResource Create.Settings.Waveform.Basic.PulseSetting.CarrierWave}" Style="{DynamicResource SubTitleBarText}"/>
                    </Border>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource SlimComboBoxStyle}" x:Name="CarrierWaveTypeSelector" SelectionChanged="SelectorSectionChanged" Tag="CarrierWaveType" Grid.Row="1" Grid.Column="0" />
                        <ComboBox SelectedValuePath="Key" DisplayMemberPath="Value" Style="{DynamicResource SlimComboBoxStyle}" x:Name="CarrierWaveOptionSelector" SelectionChanged="SelectorSectionChanged" Tag="CarrierWaveOption" Grid.Row="1" Grid.Column="1" />
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
